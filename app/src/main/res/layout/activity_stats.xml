<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_tertiary20"
    tools:context=".Activities.statsActivity">

    <TextView
        android:id="@+id/leaderboard_banner"
        android:layout_width="406dp"
        android:layout_height="115dp"
        android:background="@color/white"
        android:fontFamily="@font/atomic_age"
        android:gravity="center"
        android:text='@string/leaders'
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:theme="@style/Base.CardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/leaderboard"
        android:layout_width="383dp"
        android:layout_height="159dp"
        android:layout_marginTop="124dp"
        android:gravity="top|center_horizontal"
        android:text="@string/username_banner"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderboard_banner" />

</androidx.constraintlayout.widget.ConstraintLayout>